#!/bin/sh

DEPLOY_SERVER=${DEPLOY_SERVER:-envygeeks.io}
DEPLOY_PATH=${DEPLOY_PATH:-/srv/nginx/envygeeks.io}
DEPLOY_KEY_PATH=${DEPLOY_KEY_PATH:-~/.ssh/id_rsa}
DEPLOY_USER=${DEPLOY_USER:-jordon}

set -e
[ "$DEBUG" ] && set -x
rsync -av -e "ssh -i \"${DEPLOY_KEY_PATH}\"" dist/ \
  "${DEPLOY_USER}"@"${DEPLOY_SERVER}":"${DEPLOY_PATH}"
